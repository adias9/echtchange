<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="thumbnail">
			<%= image_tag @listing.image.url %>
			</div>
		</div>
		<div class="col-md-6">
            <h3><%= @listing.name %></h3>
            <h4><%= "#{@listing.subject} #{@listing.number}" %></h4>
            <h4><%= @listing.description %></h4>
            <p>Total Price <%= number_to_currency(@listing.price * 1.03) %></p>
            <p style="font-size: 13px;">(<%= number_to_currency(@listing.price * 0.03) %> was added for credit cards fees and for Echtchange's costs, each 1.5% of the price, respectively)</p>
			
			<br>
			
			<% if current_user != @listing.user %>
				<div class="center">
					<%= link_to "Buy It Now", new_listing_order_path(@listing), class: "btn btn-primary", data: { no_turbolink: true } %>
				</div>
			<% end %>
		</div>
	</div>

	<% if current_user == @listing.user %>
		<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
	<% end %>
	<%= link_to 'Back', listings_path, class: "btn btn-link" %>
</div>

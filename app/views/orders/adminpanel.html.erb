<div class="container">
  <h1>Admin Panel</h1>
  <h2 class="center">Pending Deliveries</h2>

  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Name</th>
      <th class="center">Listing ID</th>
      <th class="center">Seller - Address</th>
      <th class="center">Buyer - Address</th>
      <th class="center">Buyer Price - (+Credit Card)</th>
      <th class="center">Seller Transfer Amount</th>
      <th class="center">Action</th>
    </tr>

    <% @orders.each do |order| %>
      <% if order.listing.sold == true && order.listing.delivered != true %>
        <tr>
          <td><%= image_tag order.listing.image.url(:thumb) %></td>
          <td><%= "#{order.listing.name}" %></td>
          <td><%= "#{order.listing_id}" %></td>

          <td><%= "#{order.listing.user.name} - #{order.address} #{order.city}" %></td>
          <td><%= "#{User.find(order.buyer_id).name} - #{order.address} #{order.city}" %></td>

          <td><%= "#{number_to_currency(order.listing.price + 1.50)} - #{number_to_currency((order.listing.price + 1.50) * 1.03)}" %></td> <!--2.75 %-->
          <td><%= number_to_currency(order.listing.price + 1.50) %></td>

          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <!--<li><%= link_to "Send Notification", {action: :sendnotify, id: order.id}, class: "btn btn-link" %></li>-->
                <li><%= link_to "Item Delivered", {action: :delivered, id: order.id}, class: "btn btn-link" %></li>
                <li class="divider"></li>
                <li class="divider"></li>
                <li><%= link_to "Item Not Sold", {action: :unsold, id: order.id}, class: "btn btn-link" %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <br>

  <h2 class="center">Successful Deliveries</h2>

  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Name</th>
      <th class="center">Listing ID</th>
      <th class="center">Seller - Address</th>
      <th class="center">Buyer - Address</th>
      <th class="center">Buyer Price - (+Credit Card)</th>
      <th class="center">Seller Transfer Amount</th>
      <th class="center">Action</th>
    </tr>

    <% @orders.each do |order| %>
      <% if order.listing.sold == true && order.listing.delivered == true %>
        <tr>
          <td><%= image_tag order.listing.image.url(:thumb) %></td>
          <td><%= "#{order.listing.name}" %></td>
          <td><%= "#{order.listing_id}" %></td>

          <td><%= "#{order.listing.user.name} - #{order.address} #{order.city}" %></td>
          <td><%= "#{User.find(order.buyer_id).name} - #{order.address} #{order.city}" %></td>

          <td><%= "#{number_to_currency(order.listing.price + 1.50)} - #{number_to_currency((order.listing.price + 1.50) * 1.03)}" %></td> <!--2.75 %-->
          <td><%= number_to_currency(order.listing.price + 1.50) %></td>

          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Item Undeliver", {action: :undeliver, id: order.id}, class: "btn btn-link" %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>

</div>
<div class="container">
  <h1>Admin Panel</h1>
  <h2 class="center">Pending Deliveries</h2>

  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Course</th>
      <th class="center">Listing ID</th>
      <th class="center">Seller - ID</th>
      <th class="center">Buyer - ID</th>
      <th class="center">Transfer Amount</th>
      <th class="center">Action</th>
    </tr>

    <% @orders.each do |order| %>
      <% if order.listing.sold == true && order.listing.delivered != true %>
        <tr>
          <td><%= image_tag order.listing.image.url(:thumb) %></td>
          <td><%= "#{order.listing.subject} #{order.listing.number}" %></td>
          <td><%= "#{order.listing_id}" %></td>

          <td><%= "#{order.listing.user.name} - #{order.seller_id}" %></td>
          <td><%= "#{User.find(order.buyer_id).name} - #{order.buyer_id}" %></td>

          <td><%= number_to_currency(order.listing.price * 0.94) %></td>

          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Send Notification", {action: :sendnotify, id: order.id}, class: "btn btn-link" %></li>
                <li class="divider"></li>
                <li><%= link_to "Book Delivered", {action: :delivered, id: order.id}, class: "btn btn-link" %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <br>

  <h2 class="center">Successful Deliveries</h2>

  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Course</th>
      <th class="center">Listing ID</th>
      <th class="center">Seller - ID</th>
      <th class="center">Buyer - ID</th>
      <th class="center">Transfer Amount</th>
      <th class="center">Action</th>
    </tr>

    <% @orders.each do |order| %>
      <% if order.listing.sold == true && order.listing.delivered == true %>
        <tr>
          <td><%= image_tag order.listing.image.url(:thumb) %></td>
          <td><%= "#{order.listing.subject} #{order.listing.number}" %></td>
          <td><%= "#{order.listing_id}" %></td>

          <td><%= "#{order.listing.user.name} - #{order.seller_id}" %></td>
          <td><%= "#{User.find(order.buyer_id).name} - #{order.buyer_id}" %></td>

          <td><%= number_to_currency(order.listing.price * 0.94) %></td>

          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Book Undeliver", {action: :undeliver, id: order.id}, class: "btn btn-link" %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>

</div>
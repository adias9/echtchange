<div class="container">
  
  <h2 class="center">Your Purchase History</h2>

  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Name</th>
      <th class="center">Subject - Number</th>
      <th class="center">Condition - Description</th>
      <th class="center">Price</th>
      <th class="center">Seller</th>
      <th class="center">Date Purchased</th>
    </tr>

    <% @orders.each do |order| %>
      <% if order.listing.sold == true %>
        <tr>
          <td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
          <td class="center"><%= order.listing.name %></td>
          <td><%= "#{order.listing.subject} - #{order.listing.number}" %></td>
          <td><%= "#{order.listing.condition} - #{order.listing.description}" %></td>
          <td class="center"><%= number_to_currency(order.listing.price) %></td>
          <td class="center"><%= order.seller.name %></td>
          <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <br>

  <% if (user_signed_in?) %>
    <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
  <% end %>
</div>
